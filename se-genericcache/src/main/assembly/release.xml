<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>${release.classifier}</id>
	<includeBaseDirectory>false</includeBaseDirectory>

	<formats>
		<format>dir</format>
		<format>zip</format>
	</formats>

	<!-- TODO: moduleSets hatte nicht funktioniert
	siehe: http://stackoverflow.com/questions/9033920/managing-multi-module-dependencies-with-maven-assembly-plugin
	-->
	<dependencySets>
		<dependencySet>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<unpack>true</unpack>
			<outputDirectory>${artifact.artifactId}</outputDirectory>
		</dependencySet>
	</dependencySets>

</assembly>